{
  "name": "cv-def",
  "version": "1.0.0",
  "description": "Curriculum for working",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "lite-server",
    "scss": "node-sass -o css/ css/",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run dev\"",
    "clean": "rimraf briefcaseArnoldo",
    "copyfonts": "copyfiles -f node_modules/font-awesome/webfonts/* briefcaseArnoldo/webfonts",
    "imagemin": "imagemin img/* --out-dir=briefcaseArnoldo/img",
    "usemin": "usemin index.html -d briefcaseArnoldo --htmlmin -o briefcaseArnoldo/index.html",
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin"
  },
  "author": "Arnoldo Sanchez N.",
  "license": "ISC",
  "devDependencies": {
    "cssmin": "^0.4.3",
    "htmlmin": "^0.0.7",
    "lite-server": "^2.6.1",
    "onchange": "^7.1.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^3.0.2",
    "uglifyjs": "^2.4.11",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "font-awesome": "^4.7.0", 
    "node-sass": "^7.0.1"
  }
}
